<h1>Listing articles</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>

<% @articles.each do |a| %>
    <tr>
      <td>
        <%= a.title %>
      </td>
      <td>
        <%= a.text %>
      </td>

      <td>  <%= link_to 'show', article_path(a) %>
      </td>

      <td>  <%= link_to 'edit', edit_article_path(a) %>
      </td>

      <td>  <%= link_to 'destroy', article_path(a), method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
<% end %>
</table>

<%= link_to 'New Article', new_article_path %>